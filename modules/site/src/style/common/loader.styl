#loader {
    display: none;
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;    
    background-color: #fff9;
    z-index: 999;
    opacity: 0;
    animation: show-loader-outer .3s;
    animation-fill-mode: forwards;

    > div {
        display: inline-block;
        width: 150px;
        height: 150px;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
        background-image: url(../img/loader.gif);
        background-position: 50% 50%;
        background-size: cover;
        border-radius: 50%;
        box-shadow: 0 0 0 2px #eee, 0 0 20px #0001;
        animation: show-loader-inner .5s;
        animation-fill-mode: forwards;
    }

    &.visible {
        display: inline-block;
    }

    @keyframes show-loader-outer {
        0%   { opacity: 0; }
        100% { opacity: 1; }
    }

    @keyframes show-loader-inner {
        0%   { transform: translate(-50%, -50%) scale(0.5); }
        100% { transform: translate(-50%, -50%) scale(1); }
    }
}