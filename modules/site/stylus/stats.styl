@import 'blocks/main.styl';
@import 'blocks/icon.styl';
@import 'blocks/tabs.styl';
@import 'blocks/fields.styl';

html {
    background: #f5f5f5;
}

.user-name {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    height: 80px;

    span {
        font-size: 22px;
        font-weight: 600;
        flex-grow: 1;
        overflow-x: hidden;
        text-overflow: ellipsis;

        &::before {
            //content: '@';
        }
    }

    a {
        font-size: 0;
        outline: 1px solid #ddd;
        border-radius: 4px;
        white-space: nowrap;
        background: #fff;
    }

    .icon {
        width: 40px;
        height: 40px;
        padding: 9px;
        color: #778;
    }

    .icon-angle-left {
        width: 30px;
        margin-right: -15px;
    }
}

.user-penality {
    display: inline-block;
    width: 20px;
    min-width: 20px;
    height: 20px;
    box-shadow: inset 0 0 0 1px rgba(0,0,0,.1);
    border-radius: 20px;
    position: relative;
    margin: 0 5px 0 20px;

    &[data-level="0"] { background: #3d6; }
    &[data-level="1"] { background: #fd0; }
    &[data-level="2"] { background: #f80; }
    &[data-level="3"] { background: #e11; }
    &[data-level="4"] { background: #e11;

        &::before{ 
            content: '칑';
            color: rgba(100,0,0,.5);
            width: 100%;
            height: 100%;
            line-height: 18px;
            display: inline-block;
            text-align: center;
            font-size: 23px;
            font-weight: 900;
        }
    }
}

.item-group {

    .field-title small {
        color: #1c4093;
    }
    
    &[data-itemsgroup] { order: 9; }
    &[data-itemsgroup="exp"] { order: 1; }
    &[data-itemsgroup="attack_damage"] { order: 2; }    
}

.item {
    display: flex;
    justify-content: space-between;
    align-items: center;

    &[data-rarityicon="拘럺잺"] { order: 6; }
    &[data-rarityicon="游릴"] { order: 5; }
    &[data-rarityicon="游릱"] { order: 4; }
    &[data-rarityicon="游릵"] { order: 3; }
    &[data-rarityicon="游릲"] { order: 2; }
    &[data-rarityicon="游린"] { order: 1; }
    &[data-rarityicon="游"] { order: 7; }

    > div {
        display: flex;
        align-items: center;
    }

    .item-rarity {
        margin-right: 4px;
        line-height: 12px;

        &::before {
            content: '';
            display: inline-block;
            width: 15px;
            min-width: 15px;
            height: 15px;
            margin-right: 4px;
            border-radius: 3px;
            box-shadow: inset 0 0 0 1px rgba(0,0,0,0.1);
        }

        &[data-rarityicon="拘럺잺"]::before { background: #dddddd; }
        &[data-rarityicon="游릴"]::before { background: #16c60c; }
        &[data-rarityicon="游릱"]::before { background: #0078d7; }
        &[data-rarityicon="游릵"]::before { background: #886ce4; }
        &[data-rarityicon="游릲"]::before { background: #f7630c; }
        &[data-rarityicon="游린"]::before { background: #e81224; }
        &[data-rarityicon="游"]::before { background: #dddddd;
            box-shadow: inset 0 0 0 1px rgba(0,0,0,0.1), inset 0 0 0 3px #ddd, inset 0 0 0 5px #556;
        }
    }
    .item-name {}
    .item-buff {
        color: #445;
        font-size: 15px; 
        font-family: Oxanium;
        margin-top: 2px;
    }
    .item-quantity {
        background: #99a;
        color: #fff;
        font-size: 12px;
        padding: 2px 3px;
        line-height: 12px;
        display: inline-block;
        height: 16px;
        border-radius: 3px;
        margin-left: 4px;
    }
    .item-timeouticon {
        .icon {
            width: 15px;
            height: 15px;
            vertical-align: sub;
            margin: 0 2px 0 5px;
            color: #b34b4b;
        }
    }
    .item-timeoutduration {
        display: flex;
        color: #b34b4b;
        font-size: 13px; 
        font-family: Oxanium;
        margin-top: 2px;
    }
    .item-timeoutduration-dots {

    }
}