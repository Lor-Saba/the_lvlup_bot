
*, *:before, *:after {
    box-sizing: inherit;
    user-select: none;
}

html {
    font-family: 'Nunito', sans-serif;
    font-size: 16px;
    margin: 0;
    box-sizing: border-box;
}

body {
    margin: 0;
    box-sizing: border-box;
    overflow: hidden;
}

.wrap {
    display: flex;
    flex-direction: column;
    height: 100vh;
    color: #334;
    overflow: hidden;
    max-width: 480px;
    margin: 0 auto;
    position: relative;
}