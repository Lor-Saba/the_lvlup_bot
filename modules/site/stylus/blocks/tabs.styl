.tabs {
    height: 100%;
    padding-bottom: 40px;
    opacity: 0;
    animation: show-tabs 1s .5s;
    animation-fill-mode: forwards;

    @keyframes show-tabs {
        0% { opacity: 0; }
        100% { opacity: 1; }
    }
}

.tab-page {
    display: none;
    width: 100%;
    height: 100%;
    padding: 20px; 
    background: #fff;
    overflow-x: hidden;
    overflow-y: auto;

    &.active {
        display: block;
    }
}

.tab-buttons {
    display: flex;
    position: absolute;
    bottom: 0;
    width: 100%;
}
.tab-button {
    position: relative;
    width: 100%;
    text-align: center;
    height: 40px;
    line-height: 40px;
    color: #667;
    font-size: 14px;
    font-weight: 600;
    padding: 0 25px;
    background: #f5f5f5;
    box-shadow: 0 1px #ddd inset;

    &:not(.active):not(:last-child)::before{
        content: '';
        position: absolute;
        top: 20%;
        right: 0;
        width: 1px;
        height: 60%;
        display: inline-block;
        background: #ddd;
    }

    &.active {
        color: #000;
        background: #fff;
        box-shadow: 1px 0 #ddd, -1px 0 #ddd;
        z-index: 10;
    }
}